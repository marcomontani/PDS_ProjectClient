<Window x:Class="PDS_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDS_Client"
        mc:Ignorable="d"
        Title="BackupFolder" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="La mia cartella" Height="22" VerticalAlignment="Bottom">
                <Grid Background="#FFE5E5E5">
                    <Grid.Resources>
                        <DataTemplate DataType="{x:Type local:FileSystemElement}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Path=image}"/>
                                <Label Content="{Binding Path=name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Grid.Resources>
                    
                    
                    <ListBox Background="#FFE5E5E5" Name="cwd" ItemsSource="{Binding}" />
                </Grid>
            </TabItem>
            <TabItem Header="File Cancellati">
                <Grid Background="#FFE5E5E5">

                </Grid>
            </TabItem>
            <TabItem Header="Impostazioni">
                <Grid Background="#FFE5E5E5">

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
