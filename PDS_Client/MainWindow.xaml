<Window x:Class="PDS_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDS_Client"
        mc:Ignorable="d"
        Title="BackupFolder" Height="500" Width="600"
        WindowStyle="None"
         ResizeMode="NoResize"
        BorderThickness="2">
    <Grid x:Name="fs_container"
          Margin="0, 0, 0, 0"

          Background="WhiteSmoke"
          ClipToBounds="True">

        <Grid.Resources>
            <Storyboard x:Name="openDetails"
                        x:Key="key_details_animation">
                <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="details_container" Storyboard.TargetProperty="Margin" BeginTime="00:00:00">
                    <SplineThicknessKeyFrame KeyTime="00:00:00" Value="177,0,0,0" />
                    <SplineThicknessKeyFrame KeyTime="00:00:01" Value="0,0,0,0" />
                </ThicknessAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Name="closeDetails"
                        x:Key="key_details_animation_close">
                <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="details_container" Storyboard.TargetProperty="Margin" BeginTime="00:00:00">
                    <SplineThicknessKeyFrame KeyTime="00:00:00" Value="0,0,0,0" />
                    <SplineThicknessKeyFrame KeyTime="00:00:01" Value="177,0,0,0" />
                </ThicknessAnimationUsingKeyFrames>
            </Storyboard>

        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="30*"/>

        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="fs_grid"  MouseLeftButtonDown="closeVersions" Background="WhiteSmoke" />
        <Rectangle x:Name="rect_header" Grid.Row="0" Grid.Column="0" Fill="#1E1E27" Margin="0,0,0,0" Grid.ColumnSpan="2" MouseDown="mouse_MouseDown"/>        
        <Rectangle x:Name="rect_footer" Grid.Row="2" Fill="#1E1E27" Grid.ColumnSpan="2" MouseDown="mouse_MouseDown"/>
        
        
        <Button x:Name="btn_x" Content="X" Grid.Column="1" HorizontalAlignment="Left" Margin="152,0,0,0" VerticalAlignment="Top" Width="27" Height="27" Background="#FF1E1E27" Foreground="WhiteSmoke" BorderThickness="0" Click="mouse_x_click"/>
        <Label Foreground="AliceBlue" Content="© PoliHub 2014 - 2015" Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="2" Margin="0,50,0,0" FontSize="10.667" FontWeight="SemiBold" />

        <DockPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="1" x:Name="details_container" Visibility="Collapsed" >

            <StackPanel x:Name="panel_details" Background="#FF1E1E27" Margin="2, 0,0, 0" Orientation="Vertical">

                <TextBlock Text="VERSIONI" FontSize="24" Foreground="AliceBlue" FontStyle="Italic" TextOptions.TextFormattingMode="Display" FontWeight="SemiBold" VerticalAlignment="Top" TextAlignment="Center" HorizontalAlignment="Left" Margin="36,0,0,0"/>
            </StackPanel>
        </DockPanel>
        
    </Grid>
</Window>
